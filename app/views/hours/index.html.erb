<h1>Listing hours</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Initial time</th>
    <th>End time</th>
    <th>Timesheet</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hours.each do |hour| %>
  <tr>
    <td><%= hour.description %></td>
    <td><%= hour.initial_time %></td>
    <td><%= hour.end_time %></td>
    <td><%= hour.timesheet_id %></td>
    <td><%= link_to 'Show', hour %></td>
    <td><%= link_to 'Edit', edit_hour_path(hour) %></td>
    <td><%= link_to 'Destroy', hour, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

